add_puzzle(
    name = "Diamonds and Stars",
    authors = ["Henry Pickle"],
    scramble = 1000,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.7)
        rc = circle(0.5, 0.0, 0.57)
        lt = turn(lc, 10)
        rt = turn(rc, 10)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(120))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)
    