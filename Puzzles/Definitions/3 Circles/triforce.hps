add_puzzle(
    name = "Triforce",
    authors = ["cryofractal", "Henry Pickle"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.8)
        rc = circle(0.5, 0.0, 0.6)
        lt = turn(lc, 6)
        rt = turn(rc, 6)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(23))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)