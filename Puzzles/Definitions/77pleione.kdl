name "Pleione"
author "cryofractal"
// comments are for potential future Pleione generator
circles {
    // for A radius (aligns 3 triangles on a corner): r = 0.5/cos(pi/7)
    // for B radius (aligns spiky shape to edge of circle) r = a^2 + 1^2 - 2*a*cos(2pi/7)
    A x=-0.5 y=0.0 r=0.554958132087
    B x=0.5 y=0.0 r=0.784829316947
}
base A B
twists {
    A A 7
    B B 7
}
compounds {
    AB A B
    BA B A
}
cut AB19
colors {
	WHITE 245 245 245
	GREEN 128 239 128
	BLUE 179 235 242
}
color WHITE A B
color GREEN A !B
color BLUE B !A 