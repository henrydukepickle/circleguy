add_puzzle(
    name = "Heptagons",
    authors = ["cryofractal"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.75)
        rc = circle(0.5, 0.0, 0.63)
        lt = turn(lc, 7)
        rt = turn(rc, 7)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(72))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)