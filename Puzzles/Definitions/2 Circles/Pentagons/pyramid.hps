add_puzzle(
    name = "Pyramid",
    authors = ["Henry Pickle", "ysinx"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.7)
        rc = circle(0.5, 0.0, 0.57)
        lt = turn(lc, 15)
        rt = turn(rc, 5)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(36))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)