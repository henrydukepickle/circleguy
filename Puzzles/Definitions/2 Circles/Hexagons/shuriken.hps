add_puzzle(
    name = "Shuriken",
    authors = ["Henry Pickle"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.5)
        rc = circle(0.5, 0.0, 0.73)
        lt = turn(lc, 6)
        rt = turn(rc, 12)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(50))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)
    