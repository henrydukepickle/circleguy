add_puzzle(
    name = "Pleione Plus",
    authors = ["cryofractal", "ysinx"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.52)
        rc = circle(0.5, 0.0, 0.64)
        lt = turn(lc, 13)
        rt = turn(rc, 10)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([lt, rt].mult(52))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)