add_puzzle(
    name = "Pleione (66)",
    authors = ["cryofractal"],
    scramble = 500,
    build = fn() {
        lc = circle(-0.5, 0.0, 0.55735026919)
        rc = circle(0.5, 0.0, 0.86)
        lt = turn(lc, 6)
        rt = turn(rc, 6)
        add_circles([lc, rc])
        add_turns([lt, rt], ["L", "R"])
        cut([rt] ++ [lt, rt].mult(19))
        color([lc, ~rc], red)
        color([lc, rc], blue)
        color([~lc, rc], green)
    },
)